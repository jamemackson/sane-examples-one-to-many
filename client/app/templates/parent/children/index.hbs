<div class="row">
  {{#link-to 'parent.new-child' classNames="btn btn-info"}}Create New Child{{/link-to}}
</div>
<div class="row">
  <hr>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Age</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |child|}}
          <tr>
            <td>{{child.name}}</td>
            <td>{{child.age}}</td>
            <td>{{#link-to 'parent.child.edit' child classNames="btn btn-default"}}edit{{/link-to}}</td>
          </tr>
      {{/each}}
    </tbody>
  </table>

</div>
<div class="row">
{{outlet}}
</div>
